<img class="centered" src="/images/pizza-cupcaeks.png" style="width:700px;">

<section id="articles">
  <% for article in articles[0...50] %>
    <article class="post">
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
      </header>

      <section class="content">
        <%= article.summary %>
      </section>
      <div class="more"><a href="<%= article.path %>">read on &raquo;</a></div>
    </article>
  <% end %>
</section>


